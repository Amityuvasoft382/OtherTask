<% @products.each do |product|%>

<tr>
	<td scope="col" align="center"> <%= link_to "#{product.c_name+" "+product.p_name}", product,class: "btn btn-dark" %></td>
    <% if user_signed_in? %>
		<%if current_user.roles.first.name == "seller"%>
	<% if current_user.id == product.user_id%>
	<td scope="col" align="center"><%= link_to "Edit", edit_product_path(product),class: "btn btn-dark" %></td>
	<td scope="col" align="center"><%= link_to "delete", product, method: :delete,remote:true,class: "btn btn-dark",data: { confirm: 'Are you sure?' }%></td>

	<%else%>
	<td align="center">-</td>
	<td align="center">-</td>

	<%end%>

	<%end%>
	<%end%>
</tr>

<%end%>