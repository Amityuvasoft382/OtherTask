<div align="center" class=" container bg-dark text-white" >
<%= form_with(model: product, local:false, id:"new_product") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <legend align="center"><strong> Company Name </strong></legend>
    <%= form.text_field :c_name %>
  </div>

  <div class="field">
    <legend align="center"><strong> Product Name </strong></legend>
        <%= form.text_field :p_name %>
  </div>

  <div class="field">
       <legend align="center"><strong> Product Type </strong></legend>

    <%= form.text_field :p_type %>
  </div>

  <div class="field">
    <legend align=center><strong> Product price </strong></legend>
    <%= form.number_field :price %>
</div>

  <div class="field">
    <%= form.hidden_field :qty,value:1000 %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id ,value:current_user.id%>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-dark bg-info"%>
  </div>
<% end %>
</div>