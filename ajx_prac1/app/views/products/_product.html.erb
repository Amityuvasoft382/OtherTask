<% @products.each do |product| %>
      <tr align="center">
        <td><%= link_to "#{product.c_name+" "+product.p_name}",product %></td>
        <td><%= link_to 'Edit', edit_product_path(product),class:"btn btn-dark text-light" %></td>
        <td><%= link_to 'Destroy', product, method: :delete,remote:true, data: { confirm: 'Are you sure?' },class:"btn btn-dark text-light" %></td>
      </tr>
<%end%>